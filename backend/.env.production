# Production Environment Configuration for Render
# These variables should be set in the Render dashboard

# Server configuration
PORT=10000
NODE_ENV=production

# Database configuration - using Render's persistent disk
DB_PATH=/data/database.sqlite

# ESP32 configuration
# In production, we'll use mock data since ESP32 can't connect directly
USE_FALLBACK=true

# Logging level
LOG_LEVEL=info